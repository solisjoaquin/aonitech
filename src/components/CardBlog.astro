---
const { post } = Astro.props;

const href = `/blog/${post.file.split('/').pop().split('.').shift()}`;
---

<div>
  <div class="container-blog">
    <div><img src="/llama.png" alt="" /></div>
    <div class="titulo-blog">
      <h2><a href={href}>{post.frontmatter.title}</a></h2>
      <p>{post.frontmatter.description}</p>
      <span class="post-item-date">â€” {post.frontmatter.publishDate}</span>
      <div class="btn-container">
        <div class="btn-blog">
          <div>
          <a
            class="btn"
            href={ href }
            >link
          </a>
         </div>
          <div class="box-img" > <img src="./yo.jpeg" alt="">
            <h3>{post.frontmatter.autor}</h3>
          
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .container-blog {
  padding: 20px;
  background-color: var(--color-secundario);
  font-family: var(--fuente-principal);
  align-items: center;
  border-radius: 20px;
  background: var(--color-card) ;
  margin-bottom: 20px;
   
   /*  box-shadow: 5px 5px 70px #bebebe;
    /*  -5px -5px 5px #ffffff; */ */
  } 

  .container-blog img {
  width: 100%;
  border-radius: 5px;
  }
  .titulo-blog h2 {
  color: var(--color-fuente);
  font-size: 36px;
  padding-bottom: 20px;
  }

  .titulo-blog p {
  padding-bottom: 20px;
  font-size: 20px;
  color: var(--color-fuente)
  }

  /* .btn-blog {
    padding: 10px 25px;
