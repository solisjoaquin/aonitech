---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,500;0,600;1,300;1,700&family=Inter:wght@700&family=PT+Sans:wght@700&family=Roboto:ital,wght@1,700&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="logo">
        <h1><a href="/">Aonitech</a></h1>
      </div>

      <nav class="nav">
        <a href="/">Home</a>
        <a href="/lab">lab</a>
        <a href="/blog">blog</a>
        <a href="/video">video</a>
      </nav>
    </header>

    <slot />

    <footer>
      <h2>Soy el Footer</h2>
    </footer>
  </body>
</html>
<style is:global>
  :root {
    --color-primario: #0075ff;
    --fuente-principal: "Inter", sans-serif;
  }

  * {
    margin: 0;
    padding: 0;
  }
  a {
    text-decoration: none;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1600px;
    margin: 0 auto;
    padding-top: 15px;
  }
  .logo h1 a {
    font-family: var(--fuente-principal);
    color: black;
  }
  .nav {
    display: flex;
    gap: 1rem;
  }

  .nav a {
    color: #353535;
    font-family: var(--fuente-principal);
    font-weight: 600;
  }
  footer {
    background-color: #353535;
    color: white;
    justify-content: center;
    height: 16vh;
    display: flex;
    align-items: center;
    font-family: var(--fuente-principal);
  }
</style>
