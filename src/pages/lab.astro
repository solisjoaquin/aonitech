---
import Layout from "../layouts/Layout.astro";

import CardLab from "../components/CardLab.astro";

const labs = [
  {
    id: 1,
    name: "Proyecto Html Css con responsive",
    descripcion: "lorem10",
    imgUrl:
      "https://res.cloudinary.com/dd42xc1xp/image/upload/v1698263254/lab1_jcsnoz.png",
    urlDemo:
      "https://www.youtube.com/watch?v=6yJYn6n4NWo&list=RD2qf9UtU6ggU&index=17",
    urlRepo: "https://github.com/Gardesito/TP-G9",
  },
  {
    id: 2,
    name: "Reloj Digital",
    descripcion: "Reloj armando con html,css y js ",
    imgUrl:
      "https://res.cloudinary.com/dd42xc1xp/image/upload/v1698263255/lab2_ytrwod.png",
    urlDemo: "https://reloj-es.netlify.app/",
    urlRepo: "https://github.com/Gardesito/Reloj",
  },
  {
    id: 3,
    name: "Scroll",
    descripcion: "El mejor Scroll para transiciones",
    imgUrl:
      "https://res.cloudinary.com/dd42xc1xp/image/upload/v1699550087/scroll_img_csu5ea.jpg",
    urlDemo: "https://harmonious-moxie-e3624b.netlify.app/",
    urlRepo: "https://github.com/Gardesito/Scroll-Hidden",
  },
  {
    id: 4,
    name: "Linktree",
    descripcion: "",
