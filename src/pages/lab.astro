      "https://res.cloudinary.com/dd42xc1xp/image/upload/v1700158335/reloj_z0es2c.jpg",
    urlDemo: "https://eliassolis.netlify.app/",
    urlRepo: "https://github.com/Gardesito/linktree",
  },
];
---

<Layout title="Lab">
  <main>
    <div>
      <h1>Lab</h1>
    </div>
    <div class="card-lab">
      {labs.map((lab) => <CardLab lab={lab} />)}
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
  }
  .card-lab {
    display: flex;
    flex-direction: column;
  }
  h1 {
    font-family: var(--fuente-principal);
    padding-left: 20px;
    color: var(--color-fuente);
    padding-top: 20px;
  }
  @media (min-width: 700px) {
    h1 {
      padding-top: 50px;
      padding-bottom: 50px;
      padding-left: 0;
    }
  }
</style>
